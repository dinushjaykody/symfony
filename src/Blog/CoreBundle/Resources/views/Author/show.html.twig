{% extends "CoreBundle::layout.html.twig" %}

{% block title %}{{ 'post.by.author' | trans({ '%name%': author.name }) }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'post.by' | trans }}</h3>

        <p>{{ author.name }}</p>
    </aside>
{% endblock %}

{% block section %}
    {% if post %}
        {{ include('CoreBundle:Post:_post.html.twig', { post: post }) }}
    {% else %}
        <p>{{ 'author.empty.posts' | trans }}</p>
    {% endif %}

{% endblock %}
